{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    // "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules", "build"]
}
